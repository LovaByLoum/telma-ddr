# Authentification ou non selon l'environnement de deploiement
SetEnvIf HOST "localhost" SERVER_ENV_LOCAL !SERVER_ENV_RECETTE !SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "telma-interface-recrutement-recette[.]mg[.]netapsys[.]fr" !SERVER_ENV_LOCAL SERVER_ENV_RECETTE !SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "telma-interface-recrutement-recette[.]netapsys[.]fr" !SERVER_ENV_LOCAL SERVER_ENV_RECETTE !SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "tsgt02lv" !SERVER_ENV_LOCAL SERVER_ENV_RECETTE !SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "telma[.]net" !SERVER_ENV_LOCAL !SERVER_ENV_RECETTE SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "recrutement[.]axian-group[.]com" !SERVER_ENV_LOCAL !SERVER_ENV_RECETTE !SERVER_ENV_PREPROD SERVER_ENV_PROD



Order deny,allow
deny from all
allow from env=SERVER_ENV_LOCAL
allow from env=SERVER_ENV_RECETTE
allow from env=SERVER_ENV_PREPROD
allow from env=SERVER_ENV_PROD
Satisfy any

# Repertoire virtuel de Base differente par environnement pour la reecriture d'URL

SetEnvIf HOST "localhost" PROJECT_BASE_PATH=/projets/axian-recrutement/srcs/
SetEnvIf HOST "telma-interface-recrutement-recette[.]mg[.]netapsys[.]fr" PROJECT_BASE_PATH=/
SetEnvIf HOST "telma-interface-recrutement-recette[.]netapsys[.]fr" PROJECT_BASE_PATH=/
SetEnvIf HOST "tsgt02lv" PROJECT_BASE_PATH=/jobopportunity/
SetEnvIf HOST "telma[.]net" PROJECT_BASE_PATH=/axian/
SetEnvIf HOST "recrutement[.]axian-group[.]com" PROJECT_BASE_PATH=/axian/

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . %{ENV:PROJECT_BASE_PATH}index.php [L]
</IfModule>
